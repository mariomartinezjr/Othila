<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/user_image"
        android:layout_width="86dp"
        android:layout_height="86dp"
        android:layout_centerHorizontal="true"
        android:src="@android:drawable/ic_menu_camera"
        android:layout_marginTop="50dp"
        />

    <TextView
        android:id="@+id/change_image_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_image"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/secondary_text_light"
        android:textSize="18sp"
        android:text="Alterar imagem"/>


    <TextView
        android:id="@+id/ltitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/titulo"
        android:layout_below="@id/change_image_label"
        />

    <EditText
        android:id="@+id/ed_cadastro_titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ltitulo"
        android:inputType="text" />

    <TextView
        android:id="@+id/lnumeropg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/paginas"
        android:layout_below="@id/ed_cadastro_titulo"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ed_cadastro_paginas"
        android:inputType="number"
        android:layout_below="@id/lnumeropg"

        />

    <TextView
        android:id="@+id/llembrete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ajuste"
        android:layout_below="@id/ed_cadastro_paginas"
        android:layout_marginTop="10dp"

        />

    <TextView
        android:id="@+id/lhora"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hora"
        android:layout_below="@id/ldia"
        android:layout_marginTop="30dp"

        />

    <EditText
        android:id="@+id/edHora"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:layout_below="@id/ldia"
        android:layout_toRightOf="@id/lhora"
        android:layout_marginTop="20dp"
        android:maxLength="2"
        android:text="0"

        />

    <TextView
        android:id="@+id/lmin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/minuto"
        android:layout_below="@id/ldia"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@id/edHora"

        />

    <EditText
        android:id="@+id/edminuto"
        android:layout_width="50dp"
        android:layout_height="wrap_content"

        android:layout_alignBaseline="@+id/lmin"
        android:layout_alignBottom="@+id/lmin"
        android:layout_alignLeft="@+id/user_image"
        android:layout_alignStart="@+id/user_image"
        android:inputType="number"
        android:maxLength="2"
        android:text="0"
        />

    <TextView
        android:id="@+id/ldia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dia"
        android:layout_below="@id/llembrete"
        android:layout_marginTop="10dp"

        />

    <EditText
        android:id="@+id/eddia"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:layout_toRightOf="@id/ldia"
        android:layout_below="@id/llembrete"
        android:maxLength="2"
        android:text="0"

        />

    <TextView
        android:id="@+id/lmes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mes"
        android:layout_toRightOf="@id/eddia"
        android:layout_below="@id/llembrete"
        android:layout_marginTop="10dp"

        />

    <EditText
        android:id="@+id/edmes"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:layout_below="@id/llembrete"
        android:layout_toRightOf="@id/lmes"
        android:maxLength="2"
        android:text="0"

        />

    <TextView
        android:id="@+id/lano"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ano"
        android:layout_below="@id/llembrete"
        android:layout_toRightOf="@id/edmes"
        android:layout_marginTop="10dp"
        />

    <EditText
        android:id="@+id/edano"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:layout_below="@id/llembrete"
        android:layout_toRightOf="@id/lano"
        android:maxLength="4"
        android:text="0"

        />



    <Button
        android:id="@+id/btn_cadastro_salvar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/salvar"
        android:layout_marginLeft="150dp"
        android:layout_below="@id/lhora"
        android:layout_marginTop="50dp"
        />


</RelativeLayout>