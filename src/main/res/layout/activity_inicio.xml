<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/titulo"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ed_cadastro_titulo"
        android:inputType="text"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/paginas"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ed_cadastro_paginas"
        android:inputType="number"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ajuste"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hora"

        />

    <EditText
        android:id="@+id/edHora"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:inputType="number"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/minuto"

        />

    <EditText
        android:id="@+id/edminuto"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:inputType="number"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dia"
        />

    <EditText
        android:id="@+id/eddia"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:inputType="number"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mes"
        />

    <EditText
        android:id="@+id/edmes"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:inputType="number"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ano"
        />

    <EditText
        android:id="@+id/edano"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:inputType="number"

        />

    <Button
        android:id="@+id/btn_cadastro_salvar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/salvar"
        android:layout_marginLeft="150dp"
        />


</LinearLayout>